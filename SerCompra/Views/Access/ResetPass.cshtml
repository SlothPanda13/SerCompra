<!DOCTYPE html>
@{
    Layout = null;
}
<html class="loading" lang="es" data-textdirection="ltr">
<!-- BEGIN: Head-->

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <title>SerCompra - Restaurar Contraseña</title>
    <link rel="shortcut icon" href="~/Imagenes/Logo/Logo0.svg">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;1,400;1,500;1,600" rel="stylesheet">

    <!-- BEGIN: Vendor CSS-->
    <link rel="stylesheet" type="text/css" href="~/css/VuexyTemplate/vendors/css/vendors.min.css">
    <!-- END: Vendor CSS-->

    <!-- BEGIN: Theme CSS-->
    <link rel="stylesheet" type="text/css" href="~/css/VuexyTemplate/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="~/css/VuexyTemplate/css/bootstrap-extended.css">
    <link rel="stylesheet" type="text/css" href="~/css/VuexyTemplate/css/colors.css">
    <link rel="stylesheet" type="text/css" href="~/css/VuexyTemplate/css/components.css">
    <link rel="stylesheet" type="text/css" href="~/css/VuexyTemplate/css/themes/dark-layout.css">
    <link rel="stylesheet" type="text/css" href="~/css/VuexyTemplate/css/themes/bordered-layout.css">

    <!-- BEGIN: Page CSS-->
    <link rel="stylesheet" type="text/css" href="~/css/VuexyTemplate/css/core/menu/menu-types/vertical-menu.css">
    <link rel="stylesheet" type="text/css" href="~/css/VuexyTemplate/css/plugins/forms/form-validation.css">
    <link rel="stylesheet" type="text/css" href="~/css/VuexyTemplate/css/pages/page-auth.css">
    <!-- END: Page CSS-->
</head>
<!-- END: Head-->

<!-- BEGIN: Body-->

<body class="vertical-layout vertical-menu-modern blank-page navbar-floating footer-static  " data-open="click" data-menu="vertical-menu-modern" data-col="blank-page">
    <!-- BEGIN: Content-->
    <div class="app-content content ">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <div class="auth-wrapper auth-v1 px-2">
                    <div class="auth-inner py-2">
                        <!-- Reset Password v1 -->
                        <div class="card mb-0">
                            <div class="card-body">

                                    <img src="~/Imagenes/Logo/Logo0.svg" class="rounded mx-auto d-block" style="align-content: center" alt="logo0" width="25%">
                                    <h3 class="brand-text text-primary ml-1" style="text-align: center">SerCompra</h3><br>


                                <h4 class="card-title mb-1">Recuperar contraseña 🔒</h4>
                                <p class="card-text mb-2">Su nueva contraseña debe ser diferente a la usada anteriormente</p>

                                <form class="auth-reset-password-form mt-2" asp-controller="Access" asp-action="" method="post">
                                    <div class="form-group">
                                        <div class="d-flex justify-content-between">
                                            <label for="reset-password-new">Contraseña nueva</label>
                                        </div>
                                        <div class="input-group input-group-merge form-password-toggle">
                                            <input type="password" class="form-control form-control-merge" id="reset-password-new" name="reset-password-new" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="reset-password-new" tabindex="1" autofocus />
                                            <div class="input-group-append">
                                                <span class="input-group-text cursor-pointer"><i data-feather="eye"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="d-flex justify-content-between">
                                            <label for="reset-password-confirm">Confirmar contraseña</label>
                                        </div>
                                        <div class="input-group input-group-merge form-password-toggle">
                                            <input type="password" class="form-control form-control-merge" id="reset-password-confirm" name="reset-password-confirm" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="reset-password-confirm" tabindex="2" />
                                            <div class="input-group-append">
                                                <span class="input-group-text cursor-pointer"><i data-feather="eye"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <button class="btn btn-primary btn-block" tabindex="3">Establecer nueva contraseña</button>
                                </form>

                                <p class="text-center mt-2">
                                    <a asp-controller="Access" asp-action="Login"> <i data-feather="chevron-left"></i> Volver a inicio de sesión </a>
                                </p>
                            </div>
                        </div>
                        <!-- /Reset Password v1 -->
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- END: Content-->


    <!-- BEGIN: Vendor JS-->
    <script src="~/css/VuexyTemplate/vendors/js/vendors.min.js"></script>
    <!-- BEGIN Vendor JS-->

    <!-- BEGIN: Page Vendor JS-->
    <script src="~/css/VuexyTemplate/vendors/js/forms/validation/jquery.validate.min.js"></script>
    <!-- END: Page Vendor JS-->

    <!-- BEGIN: Theme JS-->
    <script src="~/css/VuexyTemplate/js/core/app-menu.js"></script>
    <script src="~/css/VuexyTemplate/js/core/app.js"></script>
    <!-- END: Theme JS-->

    <!-- BEGIN: Page JS-->
    <script src="~/css/VuexyTemplate/js/scripts/pages/page-auth-reset-password.js"></script>
    <!-- END: Page JS-->

    <script>
        $(window).on('load', function() {
            if (feather) {
                feather.replace({
                    width: 14,
                    height: 14
                });
            }
        })
    </script>
</body>
<!-- END: Body-->

</html>